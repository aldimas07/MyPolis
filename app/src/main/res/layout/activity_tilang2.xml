<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.kelompok1.uas.MyPolis.Tilang2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9AFFFFFF"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:id="@+id/silahkan"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="SILAHKAN PILIH DATA PELANGGAR"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/silahkan"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Tanggal Pelanggaran"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txTglpelanggaran_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="date"
                android:focusable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Slip Pelanggaran"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spslip_Add"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/slip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Penalti Pelanggaran"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spPenalti_Add"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/penalti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Bukti Yang Disita"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spbukti_Add"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/Bukti" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:id="@+id/buktifoto_add"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_camera_black_24dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Pelanggaran"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spPelanggaran_Add"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/Pelanggaran" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Denda"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txDenda_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loc"
                android:orientation="horizontal">

                <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:onClick="maps"
                android:layout_gravity="center"
                android:src="@drawable/maps"/>

                <TextView
                    android:id="@+id/txlokasip"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/loc"
                android:background="#373737"
                android:id="@+id/view"
                android:layout_marginTop="10dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/view"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textnama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/textalamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/textjk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/texttempatla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/texttgllahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />


                <TextView
                    android:id="@+id/textpekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/textnopol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/textjm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />



            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"

        >

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/next2"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/radius_btn"
            android:textSize="25dp"
            android:text="Simpan"/>

    </RelativeLayout>

</RelativeLayout>