<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelompok1.uas.MyPolis.edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/txID_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Nama Lengkap"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txNama_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Jenis Kelamin"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spJK_Edit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/jenis_kelamin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Tempat Lahir"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txTempatLahir_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Tanggal Lahir"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txTglLahir_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="date"
                android:focusable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Alamat"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txAlamat_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Pekerjaan"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txpekerjaan_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="No. Polisi Kendaraan"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txNopol_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Jenis"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txJenism_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Tanggal Pelanggaran"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/txTglpelanggaran_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="date"
                android:focusable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Slip Pelanggaran"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spslip_Edit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/slip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Penalti Pelanggaran"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spPenalti_Edit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/penalti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Bukti Yang Disita"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spbukti_Edit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/Bukti" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:layout_marginTop="10dp"
                android:id="@+id/buktifoto_Edit"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_camera_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Pelanggaran"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spPelanggaran_Edit"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="45dp"
                android:entries="@array/Pelanggaran" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Denda"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txDenda_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:inputType="textCapSentences"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>